{
    "version": "0.1.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "./Identity.WebAPI/bin/Debug/net8.0/Identity.WebAPI.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Inventory API",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "./Inventory.WebAPI/Inventory.WebAPI.csproj"
        },
    ]
}
